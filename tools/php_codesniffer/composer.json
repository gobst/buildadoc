{
  "require": {
    "squizlabs/php_codesniffer": "^3.11",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "config": {
    "bin-dir": "../../bin",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "post-install-cmd": "../../bin/phpcs --config-set installed_paths tools/php_codesniffer/vendor/phpcompatibility/php-compatibility",
    "post-update-cmd" : "../../bin/phpcs --config-set installed_paths tools/php_codesniffer/vendor/phpcompatibility/php-compatibility"
  }
}
